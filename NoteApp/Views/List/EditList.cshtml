@{
    ViewBag.Title = "Edit";
}
@model NoteApp.Models.ListModel

<h2>Edit</h2>
@using (Html.BeginForm("EditLists", "List", FormMethod.Post))
{

@Html.EditorFor(model => model.List_Id, new { htmlAttributes = new { @class = "form-control", style = "display: none;" } })
@Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", style = "display: none;" } })
@Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly"} })
@Html.EditorFor(model => model.UpdatedDate, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly"} })
@Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" , style = "display: none;" } })
@Html.EditorFor(model => model.ListName, new { htmlAttributes = new { @class = "form-control" } })
<input type="submit" value="Update" />
}